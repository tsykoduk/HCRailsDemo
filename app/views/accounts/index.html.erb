<p><h1>Listing Accounts from Salesforce Org</h1>
<h2>Last synch with Salesforce = <% if @triggerlog.nil? %> Never
	<% else %>
		<%= @triggerlog.created_at %>
	<% end %></h2></p>

<div id=.button ><%= link_to 'Create New Account', new_account_path %></div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
		<!--<td><%= account.id %></td>-->
		<td><a href=<%= account.id %>><%= account.name %></a></td>
		<td><a href=<%= account.website %>><%= account.website %></a></td>
		<td><%= account.billingcity %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


